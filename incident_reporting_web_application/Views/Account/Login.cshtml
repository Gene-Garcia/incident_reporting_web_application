@model incident_reporting_web_application.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-center align-items-center" style="height:100vh">
    <div class="card bg-light shadow-lg border-0" style="width:9in">
        <div class="card-body p-5">

            @*Login*@
            <div>
                <p class="color-heading text-center" style="font-size:30px; font-weight:600">Account Login</p>
                <p class="color-sub-heading text-center" style="font-size:16px; font-weight:300">Sinisian Incident Reporting Login</p>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "color-misc" })
                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "color-title control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "color-misc" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "color-title control-label col-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "color-misc" })
                            </div>
                        </div>

                        <div class="form-group mt-3 row">
                            <div class="col-6">
                                <a href="#" class="">Forgot Password?</a>
                            </div>
                            <div class="col-6 text-end">
                                <a href="/Home/Index" class="btn btn-primary">Login</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}