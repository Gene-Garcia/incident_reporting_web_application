@model IEnumerable<incident_reporting_web_application.Models.IncidentReportView.IncidentReportList>

@{
    ViewBag.Title = "DisplayIncidentReports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5 mb-5 px-3 py-4 shadow rounded" >

    <h1 class="color-heading">Incident Reports</h1>
    <p class="color-italic">Incident report cases without complete notice</p>

    <div class="table-responsive pt-3">
        <table class="table table-striped align-middle">

            <thead>
                <tr class="color-title">
                    <td>Case #</td>
                    <td>Title</td>
                    <td>Incident Description</td> @*use ... as the button for modal*@
                    <td>Relief Description</td>
                    <td>Date of Incident</td>
                    <td>Processed By</td>
                    <td>Date Processed</td>
                    <td>Hearing Status</td>
                    <td>Actions</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>@item.CaseNo</td>
                        <td>@item.CaseTitle</td>
                        <td>@item.IncidentDesc</td>
                        <td>@item.ReliefDesc</td>
                        <td>@item.DateOfIncident.ToLongDateString()</td>
                        <td>@item.ProcessedBy</td>
                        <td>@item.DateProcessed.ToLongDateString()</td>
                        <td>@item.HearingStatus</td>
                        <td class="text-center">
                            <a href="/IncidentReport/DisplayReportSummary" class="btn btn-sm btn-success m-1">Report Summary</a>
                            @*<button class="btn btn-sm btn-danger m-1">Proceed Hearing</button>*@
                            <a href="/Notice/ManageCaseNotice" class="btn btn-sm btn-outline-primary m-1">Show Notices</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

